NAME 		=	cub3d

LIBFT		=	./include/libft/libft.a

CC			=	gcc -g
FLAGS		=	-Wall -Wextra -Werror
RM			=	rm -f

SRC			=	\
					cub3d.c	\
					init.c

OBJ 		= 	$(SRC:%.c=%.o)

%.o: %.c
	$(CC) $(FLAGS) -I/usr/include -Imlx_linux -O3 -c $< -o $@

all : $(NAME)

# 1RED = \033[0;31m
